<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="@dimen/grid_margin"
        android:layout_marginRight="@dimen/grid_margin"
        android:columnWidth="@dimen/grid_column_width"
        android:horizontalSpacing="@dimen/grid_margin"
        android:verticalSpacing="@dimen/grid_margin"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth" />

</FrameLayout>
